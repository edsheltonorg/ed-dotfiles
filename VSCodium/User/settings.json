{
    // -- cross-platform --

    // telemetry
    "telemetry.telemetryLevel": "off",

    // security
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",

    // file behavior
    "files.autoSave": "onFocusChange",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    // problems behavior
    "errorLens.excludePatterns": [
        "**/*.{md,org,txt}"
    ],

    // file explorer
    "workbench.editor.enablePreview": false,
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    // path intellisense plugin
    "path-intellisense.showHiddenFiles": true,

    // terminal behavior
    "terminal.integrated.cwd": "",
    "powershell.integratedConsole.suppressStartupBanner": true,
    "terminal.integrated.scrollback": 1000,

    // font behavior
    "editor.fontFamily": "JetBrains Mono, DejaVu Sans Mono",
    "editor.fontLigatures": false,
    "editor.fontSize": 16,
    // "editor.fontWeight": 800,
    "terminal.integrated.fontFamily": "JetBrains Mono, DejaVu Sans Mono, monospace",
    // "terminal.integrated.fontWeightBold": "bold",
    "terminal.integrated.fontSize": 14,

    // output behavior
    "output.smartScroll.enabled": true,

    // editor rules
    "editor.inlayHints.enabled": "on",
    "editor.inlayHints.padding": true,
    "editor.parameterHints.cycle": true,
    "editor.suggestSelection": "first",
    "editor.accessibilitySupport": "off",
    "editor.mouseWheelZoom": true,
    "editor.tabCompletion": "off",
    "editor.renderWhitespace": "boundary",
    "editor.cursorSurroundingLines": 11,
    "editor.minimap.maxColumn": 80,
    "editor.rulers": [
        80,
        120
    ],
    "editor.wordWrap": "wordWrapColumn",
    "window.openFoldersInNewWindow": "on",
    "window.restoreWindows": "preserve",
    "window.commandCenter": true,
    "workbench.editor.untitled.hint": "hidden",
    "workbench.editor.tabSizing": "shrink",

    // diff
    "diffEditor.renderSideBySide": false,

    // explorer tree
    "workbench.tree.indent": 12,

    // custom zoom interval plugin
    "customWindowZoom.zoomLevelChangeValue": 0.5,

    // theme
    "workbench.colorCustomizations": {
        "[Default Dark+]": {
            "editorHint.border": "#ff426bbf",
            "editorHint.foreground": "#f000",
            "statusBar.background" : "#1A1A1A",
            "statusBar.noFolderBackground" : "#212121",
            "statusBar.debuggingBackground": "#263238",
            "statusBar.foreground" : "#b2c6c7",
            "tree.indentGuidesStroke": "#3e4860"
        },
    },

    // -- cross platform language settings --

    // code runner extension
    "code-runner.enableAppInsights": false,
    "code-runner.runInTerminal": true,
    "code-runner.preserveFocus": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.clearPreviousOutput": true,
    "code-runner.ignoreSelection": false,
    "code-runner.temporaryFileName": "doNotGit",

    // gitlens
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.defaultDateShortFormat": "YYYY-MM-DD",
    "gitlens.defaultDateFormat": null,
    "gitlens.hovers.annotations.enabled": false,
    "gitlens.hovers.enabled": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": true
    },

    // plaintext
    "[plaintext]": {
        "editor.wordWrapColumn": 80,
        "editor.wordBasedSuggestions": false,
        "editor.rulers": [
            72
        ],
    },

    // markdown
    "[markdown]": {
        "editor.wordWrapColumn": 80,
        "editor.wordBasedSuggestions": false,
        "editor.rulers": [
            72
        ],
    },

    "markdown.preview.scrollPreviewWithEditor": true,
    "markdown.preview.scrollEditorWithPreview": true,

    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "heading.1.markdown entity.name.section.markdown, heading.1.markdown punctuation.definition.heading.markdown",
                "settings": {
                    "foreground": "#ffecac",
                    "fontStyle": "bold",
                }
            },
            {
                "scope": "heading.2.markdown entity.name.section.markdown, heading.2.markdown punctuation.definition.heading.markdown",
                "settings": {
                    "foreground": "#9fdaab",
                }
            },
            {
                "scope": "heading.3.markdown entity.name.section.markdown, heading.3.markdown punctuation.definition.heading.markdown",
                "settings": {
                    "foreground": "#839ad4",
                }
            },
            {
                "scope": "heading.4.markdown entity.name.section.markdown, heading.4.markdown punctuation.definition.heading.markdown",
                "settings": {
                    "foreground": "#faacd7",
                }
            },
        ]
    },

    "pasteImage.defaultName":"[image-]YYYYMMDDHHmmss",
    "pasteImage.insertPattern": "<img src=\"${currentFileName}-media/${imageFileName}\" alt=\"drawing\" width=\"50\" />",
    "pasteImage.path": "${currentFileDir}/${currentFileName}-media",
    "pasteImage.basePath": "${currentFileDir}",
    "pasteImage.forceUnixStyleSeparator": true,

    "markdown.marp.enableHtml": true,

    // org
    "[org]": {
        "editor.wordWrapColumn": 80,
        "editor.wordBasedSuggestions": false,
        "editor.rulers": [
            72
        ],
    },

    // html
    "[html]": {
        "editor.wordWrapColumn": 80,
        "editor.tabSize": 2
    },

    // live server
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.useWebExt": true,

    // css
    "[css]": {
        "editor.wordWrapColumn": 80,
        "editor.tabSize": 2
    },

    // javascript
    "[javascript]": {
        "editor.wordWrapColumn": 80,
        "editor.tabSize": 2
    },

    // emmet
    "emmet.syntaxProfiles": {
        "html": {
            "self_closing_tag" : true
        }
    },

    // php
    "php.validate.run": "onType",

    // python
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,

    // jupyter notebook
    "jupyter.interactiveWindowMode": "perFile",
    "jupyter.askForKernelRestart": false,
    "notebook.output.textLineLimit": 10000,

    // powershell
    "[powershell]": {
        "debug.saveBeforeStart": "nonUntitledEditorsInActiveGroup",
        "editor.semanticHighlighting.enabled": false,
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },
    "powershell.buttons.showRunButtons": false,
    "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
    "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
    "powershell.codeFormatting.useCorrectCasing": true,

    // C#
    "csharp.inlayHints.types.enabled": true,
    "csharp.inlayHints.parameters.forLiteralParameters": true,
    "csharp.inlayHints.parameters.forIndexerParameters": true,
    "csharp.inlayHints.parameters.forObjectCreationParameters": true,
    "csharp.inlayHints.parameters.forOtherParameters": true,
    "csharp.inlayHints.types.forImplicitObjectCreation": true,
    "csharp.inlayHints.types.forImplicitVariableTypes": true,
    "csharp.inlayHints.types.forLambdaParameterTypes": true,
    "csharp.inlayHints.parameters.enabled": true,

    // java
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    // latex
    "latex-workshop.message.update.show": false,
    "latex-workshop.view.pdf.viewer": "tab",

    // platform.io
    "platformio-ide.activateOnlyOnPlatformIOProject": true,

    // -- Windows --

    // Terminal
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "powershell.debugging.createTemporaryIntegratedConsole": true,
    "powershell.scriptAnalysis.settingsPath": "C:\\Users\\ed\\dotfiles\\VSCodium\\User\\PSScriptAnalyzerSettings.psd1",

    // java
    "java.configuration.runtimes": [

        // {
        //     "name": "JavaSE-11",
        //     "path": "C:\\Program Files\\AdoptOpenJDK\\jdk-11.0.11.9-hotspot",
        //     "default": true
        // }
    ],

    // php
    // "php.validate.executablePath": "C:\\bin-programs\\php\\php8.0.8\\php.exe",

    // -- cross-platform extras --

    // vscodevim
    "vim.useSystemClipboard": true,
    "vim.foldfix": true,
    "vim.camelCaseMotion.enable": true,
    "vim.whichwrap": "h,l,<,>,[,]",
    "vim.handleKeys": {
        "<C-c>": false,
        "<C-s>": false,
        "<C-S>": false,
        "<C-w>": false,
        "<C-f>": false,
        "<C-t>": false,
        "<C-n>": false,
        "<C-u>": false,
        "<C-i>": false,
        "<Enter>": false
    },
    "vim.normalModeKeyBindings": [
        {
            "before": ["J"],
            "after": ["j", "j", "j", "j", "j", "j", "j", "j", "j", "j", "j", "j", "j", "j"]
        },
        {
            "before": ["K"],
            "after": ["k", "k", "k", "k", "k", "k", "k", "k", "k", "k", "k", "k", "k", "k"]
        },
        {
            "before": ["<Space>"],
            "commands": ["editor.toggleFold"],
        },
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["k", "j"],
            "after": ["<Esc>"]
        },
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    ],

    // spell checker
    "cSpell.enabled": true,
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.spellCheckDelayMs": 500,
    "cSpell.showStatus": true,
    "cSpell.allowCompoundWords": false,
    "cSpell.language": "en",
    "cSpell.maxNumberOfProblems": 100,
    "cSpell.numSuggestions": 8,
